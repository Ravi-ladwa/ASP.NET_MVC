@{
    ViewData["Title"] = "State Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddressBook_Replica.Areas.LOC_State.Models.LOC_StateModel;

<div class="row">
    <div class="col-md-12">
        <h2>@TempData["LOC_State_Insert_Msg"]</h2>

        <div class="container">
            <h2>State</h2>
            <hr />
            <form method="post" asp-area="LOC_State" asp-controller="LOC_State">

                @Html.HiddenFor(x => x.StateID)

               
               
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Country Name</label>
                    <div class="col-sm-4">
                        <select class="form-control" data-control="select2" data-placeholder="Select Country" data-allow-clear="true" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList, "CountryID", "CountryName"))">
                            <option>select country</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">State Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="StateName" asp-for="StateName">
                    </div>
                </div>


                @Html.HiddenFor(x => x.CreationDate)
                @Html.HiddenFor(x => x.ModificationDate)
                <input type="hidden" class="form-control" asp-for="UserID" value="@ViewBag.UserID" />

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-success rounded-pill" asp-action="Save">Save</button>
                        &nbsp;
                        <a class="btn btn-danger rounded-pill" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}