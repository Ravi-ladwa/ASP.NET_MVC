@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddressBook_Replica.Areas.CON_Contact.Models.CON_ContactModel;

<div class="row">
    <div class="col">

        <h2>@TempData["CON_Contact_Insert_Msg"]</h2>
        <div class="container">
            <h2>Contact</h2>
            <hr />
            <form method="post" enctype="multipart/form-data" asp-area="CON_Contact" asp-controller="CON_Contact">
                @Html.HiddenFor(x => x.ContactID)
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mobile</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="mobile" asp-for="Mobile">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Address </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Country </label>
                    <div class="col-sm-4">
                        <select class="form-control" data-control="select2" data-placeholder="Select Country" data-allow-clear="true" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))" onchange="funOnCountryChange();">
                            <option>select country</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">State </label>
                    <div class="col-sm-4">
                        <select class="form-control" data-control="select2" data-placeholder="Select State" data-allow-clear="true" asp-for="StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))" onchange="funOnStateChange();">
                            <option>select State</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">City </label>
                    <div class="col-sm-4">
                        <select class="form-control" data-control="select2" data-placeholder="Select City" data-allow-clear="true" asp-for="CityID" asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))">
                            <option>select City</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Contact Category </label>
                    <div class="col-sm-4">
                        <select class="form-control" data-control="select2" data-placeholder="Select Contact Category" data-allow-clear="true" asp-for="ContactCategoryID" asp-items="@(new SelectList(ViewBag.ContactCategoryList,"ContactCategoryID","ContactCategory"))">
                            <option>Select Contact Category</option>
                        </select>
                    </div>
                </div>
                <div class="form-group mb-7">
                    <label class="form-label">Image</label>
                    <input type="file" class="form-control rounded-pill" asp-for="File" placeholder="Upload File." />
                </div>


                @Html.HiddenFor(x => x.CreationDate)
                @Html.HiddenFor(x => x.ModificationDate)
                @Html.HiddenFor(x => x.PhotoPath)
                <input type="hidden" class="form-control" asp-for="UserID" value="@ViewBag.UserID" />

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-success rounded-pill" asp-action="Save">Save</button>
                        &nbsp;
                        <a class="btn btn-danger rounded-pill" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    //making dynamically list of state according to the change in Country
    function funOnCountryChange() {
        var CountryID = $("#CountryID").val();
        var UserID = $("#UserID").val();

        $("#StateID").empty();
        $("#StateID").append($("<option></option>").val("").html("Select State"));
        $("#CityID").empty();
        $("#CityID").append($("<option></option>").val("").html("Select City"));
        if (CountryID !== "") {
            $.ajax(
                {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("LOC_State_DropDownByCountry","CON_Contact", new {area="CON_Contact"})" + "?&CountryID=" + CountryID + "&UserID=" + UserID,
                    data: {},
                    dataType: "json",
                    success: function (Result) {
                        $.each(Result, function (key, value) {
                            $("#StateID").append($("<option></option>").val(value.stateID).html(value.stateName));
                        });
                    },
                    error: function (err) {
                        alert("Error While Running AJAX");
                    }
                }
            )
        }
    }

    function funOnStateChange() {
        var StateID = $("#StateID").val();
        var UserID = $("#UserID").val();

        $("#CityID").empty();
        $("#CityID").append($("<option></option>").val("").html("Select City"));
        if (StateID !== "") {
            $.ajax(
                {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("LOC_City_DropDownByState","CON_Contact", new {area = "CON_Contact"})" + "?&StateID=" + StateID + "&UserID=" + UserID,
                    data: {},
                    dataType: "json",
                    success: function (Result) {
                        $.each(Result, function (key, value) {
                            $("#CityID").append($("<option></option>").val(value.cityID).html(value.cityName));
                        });
                    },
                    error: function (err) {
                        alert("Error While Running AJAX");
                    }
                }
            )
        }
    }
</script>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}